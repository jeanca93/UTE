<?page title="new page title" contentType="text/html;charset=UTF-8"?>
<?link rel="stylesheet" type="text/css" href="/bootstrap/css/bootstrap.css" ?>
<zk>
<style dynamic="true">
        .z-toolbar a, .z-toolbar a:visited, .z-toolbar a:hover{
            border-radius: 10px;
    		border: 1px thin #0080c0;
        }
</style>
<panel id="container" title="Administracion de Aulas" vflex="1" validationMessages="@id('vmsgs')"
        viewModel="@id('vm') @init('modelo.aulas.AulasModel')">
    <toolbar>
    	<toolbarbutton image="/img/agregar.png" label="Nuevo" onClick="@command('nuevaAula')"/>
    	<toolbarbutton image="/img/trash.png" label="Eliminar" onClick="@command('eliminarAulas')"/>
    </toolbar>
    <panelchildren>
    	 <zscript>
			constraint.NoSpacesConstraint customConstraint = new constraint.NoSpacesConstraint();
		</zscript>
        <grid id="GridAulas" mold="paging" pagingPosition="bottom"
        	model="@load(vm.allAulas) @template((vm.displayEdit and each.editingStatus) ? 'editable' : 'noneditable')"
            autopaging="true" vflex="1" emptyMessage="No hay registros">
            
            <columns>
            	<column width="30px" align="center" >
            		<checkbox id="selectAllCheckBox" onCheck="@command('selectedCheckBox', CheckEvent=event)"/>
        	    </column>
                <column width="80px" label="Id Aula" align="center" sort="auto(aula.idAula)" />
                <column width="250px" label="Aula" align="left" sort="auto(aula.aulas)"/>
                <column width="250px" label="Asientos" align="left" sort="auto(aula.asientos)"/>
                <column width="120px" label="Comentarios" align="left" sort="auto(aula.comentarios)"/>
                <column width="170px" label="Estado" align="center" sort="auto(aula.estado)"/>
                <column width="120px" label="Edit" visible="@load(vm.displayEdit)"/>
            </columns>
            <template name="editable">
                <row>
                	<checkbox checked="${each.seleccionado}" disabled="true"/>
                    <textbox disabled="true" style="text-align: center;" hflex="1" 
                        value="@load(each.aula.idAula) @save(each.aula.idAula, before='confirm')" />
                    <textbox focus="true" constraint="no empty:Campo obligatorio" hflex="1" 
                        value="@load(each.aula.aula) @save(each.aula.aula, before='confirm')" />
                    <intbox constraint="no empty:Campo obligatorio" hflex="1" 
                        value="@load(each.aula.asientos) @save(each.aula.asientos, before='confirm')" />
                    <textbox constraint="${customConstraint}" hflex="1" 
                        value="@load(each.aula.comentarios) @save(each.aula.comentarios, before='confirm')" />
                    <combobox inplace="true" mold="rounded" readonly="true"
                        model="@load(vm.allEstados)" constraint="no empty:Campo obligatorio"
                        selectedItem="@bind(each.aula.estado)" hflex="1">
                        <template name="model">
                        	<comboitem value="@load(each)" label="@load(each eq 'A'? 'Activo' : 'Inactivo')"/>
                    	</template>
                    </combobox>
                    <div>
                        <button
                            image="/img/tick-small.png"
                            onClick="@command('confirm', AulasStatus=each)" />
                        <button
                            image="/img/cross-small.png"
                            onClick="@command('changeEditableStatus', AulasStatus=each)" />
                    </div>
                </row>
            </template>
            <template name="noneditable">
                <row>
                	<checkbox checked="${each.seleccionado}" disabled="false"/>
                    <label value="@load(each.aula.idAula)" hflex="1"/>
                    <label value="@load(each.aula.aula)" hflex="1"/>
                    <label value="@load(each.aula.asientos)" hflex="1"/>
                    <label value="@load(each.aula.comentarios)" hflex="1"/>
                    <combobox disabled="true" inplace="true" mold="rounded"
                        model="@load(vm.allEstados)" 
                        selectedItem="@bind(each.aula.estado)" hflex="1">
                       <template name="model">
                        	<comboitem value="@load(each)" label="@load(each eq 'A'? 'Activo' : 'Inactivo')"/>
                    	</template>
                    </combobox>
                    <button
                        image="/img/pencil-small.png"
                        onClick="@command('changeEditableStatus', AulasStatus=each)" />
                </row>
            </template>
        </grid>
    </panelchildren>
</panel>
</zk>