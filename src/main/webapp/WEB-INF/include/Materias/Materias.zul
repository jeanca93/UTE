<?page title="new page title" contentType="text/html;charset=UTF-8"?>
<?link rel="stylesheet" type="text/css" href="/bootstrap/css/bootstrap.css" ?>
<zk>
<style dynamic="true">
        .z-toolbar a, .z-toolbar a:visited, .z-toolbar a:hover{
            border-radius: 10px;
    		border: 1px thin #0080c0;
        }
</style>
<panel id="container" title="Administracion de Materias" vflex="1" validationMessages="@id('vmsgs')"
        viewModel="@id('vm') @init('modelo.materias.MateriasModel')">
    <toolbar>
    	<toolbarbutton image="/img/agregar.png" label="Nuevo" onClick="@command('nuevaMateria')"/>
    	<toolbarbutton image="/img/trash.png" label="Eliminar" onClick="@command('eliminarMaterias')"/>
    </toolbar>
    <panelchildren>
    	 <zscript>
			constraint.MaximoMateriasConstraint customConstraint = new constraint.MaximoMateriasConstraint();
		</zscript>
        <grid id="GridMaterias" mold="paging" pagingPosition="bottom"
        	model="@load(vm.allMaterias) @template((vm.displayEdit and each.editingStatus) ? 'editable' : 'noneditable')"
            autopaging="true" vflex="1" emptyMessage="No hay registros">
            
            <columns>
            	<column width="30px" align="center" >
            		<checkbox id="selectAllCheckBox" onCheck="@command('selectedCheckBox', CheckEvent=event)"/>
        	    </column>
                <column width="80px" label="Id Materia" align="center" sort="auto(materia.idMateria)" />
                <column width="250px" label="Materia" align="left" sort="auto(materia.materia)"/>
                <column width="250px" label="Horas Semana" align="left" sort="auto(materia.horasSemana)"/>
                <column width="120px" label="Edit" visible="@load(vm.displayEdit)"/>
            </columns>
            <template name="editable">
                <row>
                	<checkbox checked="${each.seleccionado}" disabled="true"/>
                    <textbox disabled="true" style="text-align: center;" hflex="1" 
                        value="@load(each.materia.idMateria) @save(each.materia.idMateria, before='confirm')" />
                    <textbox focus="true" constraint="no empty:Campo obligatorio" hflex="1" 
                        value="@load(each.materia.materia) @save(each.materia.materia, before='confirm')" />
                    <intbox constraint="${customConstraint}" hflex="1" 
                            value="@load(each.materia.horasSemana) @save(each.materia.horasSemana, before='confirm')" ></intbox>
                                       
                    <div>
                        <button
                            image="/img/tick-small.png"
                            onClick="@command('confirm', MateriaStatus=each)" />
                        <button
                            image="/img/cross-small.png"
                            onClick="@command('changeEditableStatus', MateriaStatus=each)" />
                    </div>
                </row>
            </template>
            <template name="noneditable">
                <row>
                	<checkbox checked="${each.seleccionado}" disabled="false"/>
                    <label value="@load(each.materia.idMateria)" hflex="1"/>
                    <label value="@load(each.materia.materia)" hflex="1"/>
                    <label value="@load(each.materia.horasSemana)" hflex="1"/>
                    
                    <button
                        image="/img/pencil-small.png"
                        onClick="@command('changeEditableStatus', MateriaStatus=each)" />
                </row>
            </template>
        </grid>
    </panelchildren>
</panel>
</zk>